<%= form_tag search_path, :method => 'get' do %>
	<div class="container">
	<div class="row">
		<div class="one-half column">
		<h3>From</h3>
			<label>Street:</label>
			<%= text_field_tag :street1, params[:street1]%>
			<div class="row">
				<div class="eight columns">
					<label>City:</label>
					<%= text_field_tag :city1, params[:city1]%>
				</div>
				<div class="four columns">
					<label>Zip:</label>
					<%= text_field_tag :zip1, params[:zip1]%>
				</div>
			</div>
		</div>
		<div class="one-half column">
		<h3>To</h3>
			<label>Street:</label>
			<%= text_field_tag :street2, params[:street2]%>
			<div class="row">
				<div class="eight columns">
					<label>City:</label>
					<%= text_field_tag :city2, params[:city2]%>
				</div>
				<div class="four columns">
					<label>Zip:</label>
					<%= text_field_tag :zip2, params[:zip2]%>
				</div>
			</div>
		</div>
		<%= submit_tag "Search", :name=>nil, :class=>"u-full-width" %>
	</div>
	</div>
<% end %>

<div class="container">
	<%if @search_results.any?%>
		<% @search_results.each do |result| %>
			<%= link_to "#{result.title}", result %></br>
		<% end %>
	<%else%>
		<center><h6> Nothing to Show Here </h6>
	<%end%>
</div>